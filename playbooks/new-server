---
- name: "Setup new Server (admin / ssh)"
  hosts: new
  become: true
  roles:
  - role: update
    remote_user: "{{ default_admin }}"
  - role: set-admin
    remote_user: "{{ default_admin }}"
    vars: 
     ansible_become_pass: "{{ admin_pwd }}"
  - role: access-config
    remote_user: "{{ new_admin }}"
    vars: 
      ansible_become_pass: "{{ admin_pwd }}"
    tags:
      - access

